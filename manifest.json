{
    "manifest_version": 3,
    "name": "抖音采集助手",
    "description": "筛选抖音博主高赞视频，一键保存到飞书表格",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        },
        "default_title": "抖音采集助手"
    },
    "permissions": [
        "activeTab",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://www.douyin.com/*",
        "https://open.feishu.cn/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.douyin.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html"
}